<div class="container">
  <h2>INDEX</h2>
  <table class="table">
    <tr>
      <th>TITLE</th>
      <th>BODY</th>
      <th>PRICE</th>
      <th></th>
    </tr>
    <% @posts .each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.price %></td>
        <td><%= link_to "Show", post_path(post.id) %></td>
      </tr>
    <% end %>
  </table>
</div>

